<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashraama"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".UI.SplashActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/npb_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="200dp"
        app:progress_max="100"
        app:progress_current="0"
        app:progress_text_color="@color/white"
        app:progress_text_visibility="visible"
        style="@style/NumberProgressBar_Default"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/raamsha_mainlogo"
            android:id="@+id/img_icon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Welcome In Raamsa"
            android:textColor="@color/Metallicgold"
            android:textSize="@dimen/_30ssp"
            android:textStyle="italic" />
        <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="In"
        android:textColor="@color/Metallicgold"
        android:textSize="@dimen/_30ssp"
        android:textStyle="italic"
            android:id="@+id/txt2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Raamsa"
            android:textColor="@color/Metallicgold"
            android:textSize="@dimen/_30ssp"
            android:textStyle="italic"
            android:id="@+id/txt3"/>
-->
    </LinearLayout>
</LinearLayout>